<Window x:Class="WpfAppEntity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEntity"
        xmlns:y="clr-namespace:WpfAppEntity.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <y:ucLogin      x:Name="ucLoginForm" 
                        sucess="LoginForm_sucess" 
                        fail="LoginForm_fail">
        </y:ucLogin>                                    <!--chamando o login com sucess e fail-->
        <y:ucGridView   x:Name="ucGridForm" 
                        Visibility="Hidden">
        </y:ucGridView>
    </Grid>
</Window>
